@model LaptopBMT.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-person-circle"></i> Thông tin cá nhân</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="Profile" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-white">
        <input type="hidden" asp-for="UserId" />

        <div class="text-center mb-4">
            <img src="~/uploads/avatars/@Model.AvatarUrl"
                 alt="Avatar"
                 class="rounded-circle border"
                 width="150"
                 height="170" />
            <div class="mt-2">
                <input type="file" name="AvatarFile" accept="image/*" class="form-control" style="max-width:300px; margin:auto;" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Họ và tên</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Địa chỉ</label>
            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Lưu thay đổi
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">
            ← Quay lại trang chủ
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
