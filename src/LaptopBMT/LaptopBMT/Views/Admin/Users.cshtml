@model IEnumerable<LaptopBMT.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">👤 Quản lý người dùng</h2>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="text-center">
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Role == "Admin")
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">User</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-outline-primary btn-sm">✏️ Sửa</a>

                        <form asp-action="ChangeRole" asp-route-id="@user.UserId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-warning btn-sm">
                                🔁 @((user.Role == "Admin") ? "Hạ quyền" : "Nâng quyền")
                            </button>
                        </form>

                        <form asp-action="Delete" asp-route-id="@user.UserId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                                🗑️ Xóa
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
