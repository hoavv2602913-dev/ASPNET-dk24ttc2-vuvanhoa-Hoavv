@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
    var fullName = HttpContextAccessor.HttpContext?.Session.GetString("FullName");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Laptop BMT </title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .hero-section {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .product-card:hover {
            transform: translateY(-4px);
            transition: 0.3s;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

        footer {
            background-color: #212529;
            color: #ccc;
        }

        .sale-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            color: white;
            padding: 4px 8px;
            font-size: 0.8rem;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <!-- 🧭 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
            <a class="navbar-brand fw-bold text-white" href="/">Laptop BMT</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Home/LaptopGaming">Laptop Gaming</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Home/LaptopVanPhong">Laptop Văn phòng</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Home/Contact">Liên hệ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Order/List">Đơn hàng của tôi</a></li>
                    @* 👉 Nếu là ADMIN thì hiển thị nút Quản trị *@
                    @if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link text-warning fw-bold">
                                <i class="bi bi-speedometer2"></i> Quản trị
                            </a>
                        </li>
                    }
                </ul>

                <form asp-controller="Product" asp-action="Search" method="get" class="d-flex ms-3">
                    <input class="form-control me-2" type="text" name="keyword" placeholder="Tìm laptop...">
                    <button class="btn btn-primary me-2">🔍</button>

                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <div class="dropdown">
                            <a class="btn btn-outline-light dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                👋 Chào, @fullName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-primary me-2" href="/Account/Login">Đăng nhập</a>
                        <a class="btn btn-warning" href="/Account/Register">Đăng ký</a>
                    }
                </form>
            </div>
        </div>
    </nav>

    <!-- 📦 Nội dung trang -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <!-- 📞 Footer -->
    <footer class="text-center py-4">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year - LaptopBMT. All rights reserved.</p>
            <div>
                <a href="https://fb.com" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                <a href="https://www.instagram.com/" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                <a href="mailto:hoavv2602913@tvu-onschool.edu.vn" class="text-white"><i class="bi bi-envelope"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
