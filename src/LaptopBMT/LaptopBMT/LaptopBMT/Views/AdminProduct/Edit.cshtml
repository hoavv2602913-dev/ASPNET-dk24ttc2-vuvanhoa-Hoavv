@model LaptopBMT.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-bold">
            <i class="bi bi-pencil-square me-2"></i> Sửa sản phẩm
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ProductId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Brand" class="form-label fw-semibold">Hãng</label>
                    <input asp-for="Brand" class="form-control" placeholder="VD: Asus, Dell..." />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold">Giá (₫)</label>
                    <input asp-for="Price" class="form-control" type="number" min="0" step="1000" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết sản phẩm..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Ảnh hiện tại</label><br />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="~/images/product_img/@Model.ImageUrl" class="rounded border shadow-sm" width="200" />
                        }
                        else
                        {
                            <p class="text-muted fst-italic">Chưa có ảnh</p>
                        }
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Ảnh mới (nếu có)</label>
                        <input type="file" name="imageFile" class="form-control" />
                    </div>
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}