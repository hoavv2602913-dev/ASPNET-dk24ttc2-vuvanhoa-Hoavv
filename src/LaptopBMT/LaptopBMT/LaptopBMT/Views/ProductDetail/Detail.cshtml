@model LaptopBMT.Models.Product
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Chi tiết Laptop";
    // Lấy quyền người dùng từ session
    var userRole = HttpContextAccessor.HttpContext?.Session?.GetString("Role") ?? "";
}

<h2 class="text-center text-primary mb-4">💻 Chi tiết Laptop</h2>

<div class="card shadow-lg border-0 p-4 mx-auto" style="max-width: 800px;">
    <div class="row g-4 align-items-center">
        <div class="col-md-5 text-center">
            @{
                var img = Model?.ImageUrl ?? "default.jpg"; // ảnh mặc định khi null
                img = img.StartsWith("/images/") || img.StartsWith("~/images/")
                ? img
                : "/images/product_img/" + img;
            }

            <img src="@Url.Content(img)"
                 alt="@Model?.Name"
                 class="img-fluid rounded"
                 style="max-height: 250px; object-fit: contain;" />

        </div>

        <div class="col-md-7">
            <h3 class="text-dark">@Model.Name</h3>
            <p><strong>Hãng:</strong> @Model.Brand</p>
            <p class="text-success fw-bold">@Model.Price.ToString("N0") ₫</p>
            <p><strong>Mô tả:</strong></p>
            <p>@Model.Description</p>

            <div class="mt-4 d-flex flex-wrap align-items-center gap-2">

                @* Chỉ hiển thị khi userRole == "Admin" *@
                @if (userRole == "Admin")
                {
                    <a asp-area="Admin" asp-controller="AdminProduct" asp-action="Edit" asp-route-id="@Model.ProductId"
                       class="btn btn-outline-warning d-flex align-items-center gap-1">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>

                    <a asp-area="Admin" asp-controller="AdminProduct" asp-action="Delete" asp-route-id="@Model.ProductId"
                       class="btn btn-outline-danger d-flex align-items-center gap-1"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?')">
                        <i class="bi bi-trash3"></i> Xóa
                    </a>
                }

                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                    <input type="hidden" name="laptopId" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-success d-flex align-items-center gap-1">
                        <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                    </button>
                </form>

                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-secondary d-flex align-items-center gap-1">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>

            </div>
        </div>
    </div>
</div>
