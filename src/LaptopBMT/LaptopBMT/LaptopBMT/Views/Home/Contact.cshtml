@{
    ViewData["Title"] = "Liên hệ với chúng tôi";
}

<style>
    .contact-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        animation: fadeIn 0.6s ease-in-out;
    }
    
    .contact-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 30px;
        font-weight: 700;
        color: #0056b3;
    }
    .contact-info {
        border-left: 4px solid #007bff;
        padding-left: 15px;
        margin-bottom: 25px;
    }
    .btn-submit {
        background-color: #007bff;
        border: none;
        padding: 10px 25px;
        font-size: 16px;
        border-radius: 6px;
    }
    .btn-submit:hover {
        background-color: #0056b3;
    }
</style>

<div class="contact-container">
    <h2 class="contact-title">Liên hệ với chúng tôi</h2>

    <div class="contact-info">
        <p><strong>📍 Địa chỉ:</strong> 40 Phạm Hùng, Đắk Lắk</p>
        <p><strong>📞 Số điện thoại:</strong> 0367.531.194</p>
        <p><strong>📧 Email:</strong> support@laptopbmt.com</p>
        <p><strong>⏰ Giờ làm việc:</strong> 8:00 - 21:00 (T2 - CN)</p>
    </div>

    <form method="post" action="#">
        <div class="mb-3">
            <label class="form-label">Họ và tên</label>
            <input type="text" class="form-control" placeholder="Nhập họ và tên của bạn" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" placeholder="Nhập email của bạn" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Nội dung</label>
            <textarea class="form-control" rows="5" placeholder="Viết nội dung bạn muốn gửi..." required></textarea>
        </div>

        <button type="submit" class="btn btn-submit text-white">Gửi liên hệ</button>
    </form>
</div>
