@model LaptopBMT.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chi tiết đơn hàng #@Model.OrderId</h4>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Khách hàng:</strong> @Model.UserName</p>
                    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>
                        <strong>Trạng thái:</strong>
                        <span class="badge bg-warning text-dark">
                            @Model.Status
                        </span>
                    </p>
                </div>
            </div>

            <hr />

            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td class="text-start">@item.Product?.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice.ToString("N0") đ</td>
                            <td>@((item.Quantity* item.UnitPrice).ToString("N0")) đ</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-4">
                <h4 class="fw-bold text-danger">
                    Tổng cộng: @Model.TotalAmount.ToString("N0") đ
                </h4>
            </div>

            <div class="mt-3">
                <a asp-area="Admin" asp-controller="AdminOrder" asp-action="Index"
                   class="btn btn-secondary">
                    ← Quay lại danh sách
                </a>
            </div>

        </div>
    </div>
</div>
