@model IEnumerable<LaptopBMT.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3"><i class="fa-solid fa-receipt me-2"></i>Quản lý đơn hàng</h2>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Số sản phẩm</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.UserName</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.TotalAmount.ToString("N0") ₫</td>
                        <td>
                            @{
                                var badgeClass = order.Status switch
                                {
                                    "Hoàn thành" => "bg-success",
                                    "Đang xử lý" => "bg-warning text-dark",
                                    "Đã hủy" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@order.Status</span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info me-1">👁 Xem</a>
                            <form asp-action="Delete" asp-route-id="@order.OrderId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa đơn hàng này không?');">
                                    🗑 Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Không có đơn hàng nào.</td>
                </tr>
            }
        </tbody>

    </table>
</div>
