@model IEnumerable<LaptopBMT.Models.Order>

<h2 class="text-center mb-4">📦 Danh sách đơn hàng</h2>

<table class="table table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-danger fw-bold">@order.TotalAmount.ToString("N0") ₫</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
